extends layoutGen  
block content
    #main.container
        .row
            form.col-lg-6.col-md-7.col-sm-12.form.mx-auto(method="POST" action='/registermanager')
                h3#mega Register Manager
                h5#mini Fill the form below to register new manager
                div.form-field
                        input.form-control(name="fullname" placeholder='Full Name' )
                div.form-row
                    div.col.form-group
                        input.form-control(name="contact" placeholder='Contact' )
                    div.col.form-group
                        input.form-control(name="email" placeholder='Email' )
                div.form-row
                    div.col.form-group
                        input.form-control(type="password" placeholder='Password' name="password" )
                    div.col.form-group
                        input.form-control(name="username" placeholder='Username' )
                div.form-row
                    div.col.form-group
                        button#submit.btn.btn-warning.btn-block Add manager
                            