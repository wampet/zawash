extends layoutGen  
block content
    #main.container
        .row
            form.col-lg-6.col-md-7.col-sm-12.form.mx-auto(method="POST" action='/registermanager')
                h3#mega Register Manager
                h5#mini Fill the form below to register new manager
                div.form-row
                    div.col.form-group
                        input.form-control(name="firstname" placeholder='First Name' required='')
                    div.col.form-group
                        input.form-control(name="lastname" placeholder='Last Name' required='')
                    div.col.form-group
                        input.form-control(name="username" placeholder='Username' required='')
                div.form-row
                    div.col.form-group
                        input.form-control(type="password" placeholder='Password' name="password" required='')
                div.form-row
                    div.col.form-group
                        button#submit.btn.btn-warning.btn-block Add manager
                            