extends layoutGen  
block content
  #main.container
    .row
        form(method="POST" action='/registermanager')
            div.form-row
                div.col.form-group
                    label First name 
                    input.form-control(name="firstname" placeholder='First Name')
                div.col.form-group
                    label Last name
                    input.form-control(name="lastname" placeholder='Last Name')
                div.col.form-group
                    label User name
                    input.form-control(name="username" placeholder='Username')
            div.form-row
                div.col.form-group
                    label Create Password
                    input.form-control(type="password" name="password")
            div.form-row
                div.col.form-group
                    button.btn.btn-primary.btn-block Add manager
                            